
upstream app_server {
    server      <%= nginx_upstream %> fail_timeout=0;
}

server {
    listen      80;
    server_name <%= define_servername %><% nginx_serveraliases.each do |val| -%> <%= val %><% end -%>;

    access_log          /var/log/nginx/<%= define_servername %>.access.log;
    error_log           /var/log/nginx/<%= define_servername %>.error.log;

    root                <%= nginx_rootdir %>;

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;       

        if (!-f $request_filename) {
            proxy_pass <%= nginx_upstream %>;
            break;
        }
    }
}
